$title = 'Latest posts from ' . $projectname;
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>


<table class="table">
<tr>
    <th style="width: 53px;">Id</th>
    <th style="width: 150px;">Link</th>
    <th style="width: 150px;">Posting Time</th>

